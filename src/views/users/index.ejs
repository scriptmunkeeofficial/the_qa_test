<%- include('../header'); -%>

<div class="container">
    <h2>Users</h2>

    <div id="users" class="table-responsive">
        <table class="table table-bordered table-hover">
            <caption>List of users</caption>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Active?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% data.user_list.forEach( function(user) { -%>
                    <tr>
                        <td><%= user.user_id %></td>
                        <td><%= user.f_name %> <%= user.l_name %></td>
                        <td><%= user.user_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.active %></td>
                        <td><a href="/users/<%= user.user_id %> "><button>View</button></a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
<%- include('../footer'); -%>
